class KontoBankowe(val stanPoczatkowy: Int){
  private var _stanKonta = stanPoczatkowy
  
  def this(stanPoczątkowy: String){
    this(0)
  }
  
  def stanKonta = _stanKonta
  
  def wplata(x: Int): Unit ={
    _stanKonta = _stanKonta + x
  }
  def wyplata(x: Int): Unit ={
    _stanKonta =_stanKonta - x
  }
}

